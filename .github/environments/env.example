# This is a template for environment variables
# Copy this file to .env.staging and .env.production and fill with appropriate values

# Database
DATABASE_URL=postgresql://username:password@hostname:5432/database_name
DATABASE_POOL_SIZE=10
DATABASE_SSL=true

# Authentication
JWT_SECRET=your-secure-jwt-secret-here
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=86400

# Security
ENCRYPTION_KEY=your-32-character-encryption-key-here
CSRF_SECRET=your-csrf-secret-key-here
CSRF_TOKEN_EXPIRY=3600
CSRF_COOKIE_NAME=XSRF-TOKEN

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://app.sanvi-machinery.com,https://admin.sanvi-machinery.com
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-CSRF-Token
CORS_MAX_AGE=86400

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_STORE_SIZE=1000

# Logging
LOG_LEVEL=info
AUDIT_LOG_ENABLED=true
AUDIT_LOG_STORAGE=database
SECURITY_LOG_LEVEL=info

# Monitoring
SECURITY_MONITOR_ENABLED=true
INTRUSION_DETECTION_ENABLED=true
ALERT_THRESHOLD_LEVEL=medium
IP_BLOCK_DURATION=3600
SUSPICIOUS_ACTIVITY_THRESHOLD=5

# Backup and Recovery
BACKUP_SCHEDULE=0 0 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backup
DISASTER_RECOVERY_PLAN_PATH=/dr-plan

# API Configuration
API_BASE_URL=/api/v1
MAX_PAYLOAD_SIZE=10mb
REQUEST_TIMEOUT=30000

# Frontend
NEXT_PUBLIC_API_URL=https://api.sanvi-machinery.com/api/v1

# Monitoring and APM
APM_SERVICE_NAME=sanvi-machinery
APM_SERVER_URL=http://apm-server:8200
METRICS_ENABLED=true
TRACE_SAMPLE_RATE=0.1
