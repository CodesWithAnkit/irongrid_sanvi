{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sanvi-machinery.com/schemas/quotation.schema.json",
  "title": "Quotation",
  "type": "object",
  "required": ["company", "customer", "metadata", "items", "tax", "totals", "bankDetails"],
  "properties": {
    "company": {
      "type": "object",
      "required": ["name", "address"],
      "properties": {
        "name": { "type": "string" },
        "address": { "type": "string" },
        "GSTIN": { "type": "string" },
        "contact": { "type": "string" }
      }
    },
    "customer": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": { "type": "string" },
        "address": { "type": "string" },
        "contacts": {
          "type": "array",
          "items": { "type": "string" },
          "default": []
        }
      }
    },
    "metadata": {
      "type": "object",
      "required": ["quoteNumber", "date"],
      "properties": {
        "quoteNumber": { "type": "string" },
        "date": { "type": "string", "format": "date" }
      }
    },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["description", "quantity", "unitPrice", "total"],
        "properties": {
          "description": { "type": "string" },
          "quantity": { "type": "number", "minimum": 0 },
          "unitPrice": { "type": "number", "minimum": 0 },
          "total": { "type": "number", "minimum": 0 }
        }
      }
    },
    "tax": {
      "type": "object",
      "required": ["sgstRate", "cgstRate", "sgstAmount", "cgstAmount"],
      "properties": {
        "sgstRate": { "type": "number", "minimum": 0 },
        "cgstRate": { "type": "number", "minimum": 0 },
        "sgstAmount": { "type": "number", "minimum": 0 },
        "cgstAmount": { "type": "number", "minimum": 0 }
      }
    },
    "totals": {
      "type": "object",
      "required": ["subtotal", "taxTotal", "grandTotal", "amountInWords"],
      "properties": {
        "subtotal": { "type": "number", "minimum": 0 },
        "taxTotal": { "type": "number", "minimum": 0 },
        "grandTotal": { "type": "number", "minimum": 0 },
        "amountInWords": { "type": "string" }
      }
    },
    "bankDetails": {
      "type": "object",
      "required": ["bankName", "accountNumber", "ifsc"],
      "properties": {
        "bankName": { "type": "string" },
        "accountNumber": { "type": "string" },
        "ifsc": { "type": "string" }
      }
    }
  },
  "additionalProperties": false
}
